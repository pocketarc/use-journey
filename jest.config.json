{
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "verbose": true,
    "extensionsToTreatAsEsm": [
        ".ts",
        ".tsx"
    ],
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx"
    ],
    "transform": {
        "^.+\\.tsx?$": [
            "ts-jest",
            {
                "useESM": true
            }
        ]
    }
}